{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "roots": ["<rootDir>/src/", "<rootDir>/test/"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "moduleNameMapper": {
    "^(common|core|database|loaders)/(.*)$": "<rootDir>/src/$1/$2"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
