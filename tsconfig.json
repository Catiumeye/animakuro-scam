{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
          "dom",
          "esnext.asynciterable",
          "es2015.iterable"
        ],
        "typeRoots": [
            "node_modules/@types",
            "node_modules/.pnpm/@types+*"
        ],
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "pretty": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "allowJs": true,
        "paths": {
            "common/*": [
                "src/common/*"
            ],
            "core/*": [
                "src/core/*"
            ],
            "database/*": [
                "src/database/*"
            ],
            "loaders/*": [
                "src/loaders/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
    ],
}
